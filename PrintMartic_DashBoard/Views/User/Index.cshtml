@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid p-5">
    <div class="w-75 m-auto bg-white p-5">
        <a class="btn  btn-primary" asp-action="AddUser">Add User</a>
        <h1 class="mt-5 pt-5">All Users</h1>

        <hr />

        @if (Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Photo</th>
                            <th scope="col">UserName</th>
                            <th scope="col">DisplayName</th>
                            
                           
                            <th scope="col">Roles</th>
                            <th>Details</th>
                            <th>Add Role OR Edit</th>
                            <th>Delete</th>
                            <th>Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">@item.Id</td>
                                <td>@item.Photo</td>
                                <td>@item.UserName</td>
                                <td>@item.DisplayName</td>
                                
                               
                                <td>@string.Join(",", item.Roles.ToList())</td>
                                <td>
                                    <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Add Role</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                                <td>
                                    <label class="switch switch-primary switch-pill form-control-label">
                                        <input type="checkbox" class="switch-input form-check-input" value="on" checked>
                                        <span class="switch-label"></span>
                                        <span class="switch-handle"></span>
                                    </label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-danger w-50 m-auto bg-white">There are no users</div>
        }
    </div>
</div>




@model RoleUserViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="w-75 m-auto p-5 mt-4 bg-white">
    <h1>Edit @Model.DisplayName</h1>
      <form method="post" asp-action="EditRole">
        <input  asp-for="Id" hidden/>
          <div>
            <label asp-for="DisplayName" class="control-label"></label>
            <input asp-for="DisplayName" class="form-control" disabled />
        </div>
     
        <hr />
        <h3>Manage Roles</h3>
        
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div>
                <input asp-for="@Model.Roles[i].RoleName" hidden />
                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.Roles[i]">@Model.Roles[i].RoleName</label>
                <span asp-validation-for="Roles" class="text-danger"></span>


            </div>
        }

        <div class="form-footer mt-6">
            <button type="submit" class="btn btn-danger">Save</button>
            <button asp-action="Index" class="btn btn-primary ">Back To List</button>
        </div>


    </form>

</div>

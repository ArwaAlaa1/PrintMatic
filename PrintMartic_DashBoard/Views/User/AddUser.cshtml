@model UserFormViewModel

@{
    ViewData["Title"] = "AddUser";
}

<div class="w-75 m-auto p-5 mt-4 bg-white">
    <h1>Add User</h1>

    <form method="post" asp-action="AddUser" enctype="multipart/form-data">
        @* <input hidden asp-for="Id" /> *@
        <div class="form-group mt-4">
            <label for="exampleFormControlInput1" asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" id="exampleFormControlInput1">

        </div>

        <div class="form-group mt-4">
            <label for="exampleFormControlInput1" asp-for="DisplayName"></label>
            <input asp-for="DisplayName" class="form-control" id="exampleFormControlInput1">

        </div>

        <div class="form-group mt-4">
            <label for="exampleFormControlInput1" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" id="exampleFormControlInput1">

        </div>
 
        <div class="form-group mt-4">
            <label for="exampleFormControlInput1" asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" id="exampleFormControlInput1">

        </div>

        <div class="form-group mt-4">
            <label for="exampleFormControlInput1" asp-for="Location"></label>
            <input asp-for="Location" class="form-control" id="exampleFormControlInput1">

        </div>
        <div class="form-group">
            <label asp-for="PhotoFile" class="control-label fw-bold fs-4"></label>
            <input asp-for="PhotoFile" class="form-control form-control-lg" type="file" id="formFile" />
        </div>

        <div class="form-group mt-4">
            <label for="exampleFormControlInput1" asp-for="Password"></label>
            <input asp-for="Password" class="form-control" id="exampleFormControlInput1">
            </div>
        <div class="form-footer mt-6">
            <button type="submit" class="btn btn-danger">Save</button>
            <button asp-action="Index" class="btn btn-primary ">Back To List</button>
        </div>
       
    </form>


</div>



@model CategoryVM
@{
    ViewData["Title"] = "Edit";
}

    <div class="m-auto  bg-white p-5">
    <h1>تعديل القسم</h1>
    @if(!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-primary mt-3 mb-2">
            @TempData["message"]
        </div>
    }
</hr>
<form asp-action="Edit" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row ">
            
            <div class="col">

                <input asp-for="Name" class="form-control" placeholder="اسم القسم" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="col">
                @* <label  class="control-label fw-bold fs-4">صوره</label> *@
                <input asp-for="PhotoFile" class="form-control form-control-lg" type="file" placeholder="صوره" id="formFile" />
            </div>


        </div>
        <div class="form-group ">
            <label for="example-textarea">وصف المنتج</label>
            <textarea class="form-control" asp-for="Description" id="example-textarea" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
    <br />

        <div class="col-md-4 mb-3">
            <label class="col-form-label fw-bold fs-4">الصوره</label>
            <div class="image-container">
                <input type="hidden" asp-for="PhotoURL" />
                <img src="~/Uploads/category/@Model.PhotoURL" class="rounded-2 img-fluid img-thumbnail" alt="Category Image" />
            </div>
        </div>

        <style>
            .image-container {
                width: 100%;
                height: auto;
                max-width: 310px; /* Adjust the max-width as needed */
                max-height: 310px; /* Adjust the max-height as needed */
                border: 1px solid #ddd;
                padding: 5px;
                background-color: #f8f9fa;
                border-radius: 8px;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                display: flex;
                justify-content: center;
                align-items: center;
            }

                .image-container img {
                    max-width: 300px;
                    max-height: 300px;
                    object-fit: cover;
                    border-radius: 4px;
                }
        </style>

        <div class="col" hidden>

            <input asp-for="FilePath" class="form-control" placeholder="مكان الصوره" />
        </div>
        <br />
        <div class="form-group mt-4">
            <input type="submit" value="حفظ" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">العوده</a>
    </div>
</form>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}


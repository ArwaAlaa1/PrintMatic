@model ProductVM

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group" hidden>
    <label asp-for="Id" class="control-label"></label>
    <input asp-for="Id" class="form-control" />
    <span asp-validation-for="Id" class="text-danger"></span>
</div>


<div class="form-row">
    <div class="col-md-4 mb-3">
      <label >اسم المنتج</label>
      <input type="text" class="form-control" asp-for="Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group col-md-4">
        <label for="inputState">اسم القسم</label>
        <select asp-for="CategoryId" class="form-control" class="form-select  form-select-lg mb-3" aria-label="Large select example" asp-items="@(new SelectList(Model.Categories,"Id","Name"))">
            <option value="0">اختار اسم القسم</option>
        </select>
    </div>
    <div class="form-group col-md-4">
        <label for="inputState">اسم البائع</label>
        <select asp-for="UserId" class="form-control" class="form-select  form-select-lg mb-3" aria-label="Large select example" asp-items="@(new SelectList(Model.Users,"Id","DisplayName"))">
            <option value="0">اختار اسم الشركه</option>
        </select>
    </div>
    <div class="col">
        <label for="validationServer01">السعر العادي</label>

        <input type="text" class="form-control " asp-for="NormalPrice" required>
        <span asp-validation-for="NormalPrice" class="text-danger"></span>

    </div>
   
    <div class="col">
        <label for="validationServer01">السعر المستعجل</label>

        <input type="text" class="form-control " asp-for="UrgentPrice" required>
        <span asp-validation-for="UrgentPrice" class="text-danger"></span>
    </div>
    <div class="col">
        <label for="validationServer01">عدد الصور</label>

        <input type="text" class="form-control " asp-for="NumOfPhotos" required>
        <span asp-validation-for="NumOfPhotos" class="text-danger"></span>

    </div>
    </div>

    <br />
    
      
 <!-- /.col -->
   
  <div  class="form-row">
    <div class="col-md-3 mb-3">
        <label for="validationCustom05">الحد الأدنى للمده</label>
        <input type="text" class="form-control " asp-for="NormalMinDate" required>
        <span asp-validation-for="NormalMinDate" class="text-danger"></span>

    </div>
        <div class="col-md-3 mb-3">
            <label for="validationServer01">الحد الأعلى للمده</label>
            <input type="text" class="form-control " asp-for="NormalMaxDate" required>
            <span asp-validation-for="NormalMaxDate" class="text-danger"></span>

        </div>
          <div class="col-md-3 mb-3">
            <label for="validationServer01">الحد الأدنى لمده المنتج المستعجل </label>
            <input type="text" class="form-control " asp-for="UrgentMinDate" required>
            <span asp-validation-for="UrgentMinDate" class="text-danger"></span>

        </div>

    <div class="col-md-3 mb-3">
        <label for="validationServer01">الحد الأعلى  لمده المنتج المستعجل</label>
        <input type="text" class="form-control " asp-for="UrgentMaxDate" required>
        <span asp-validation-for="UrgentMaxDate" class="text-danger"></span>

    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Color" />اللون
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Text" />النص
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Date" />التاريخ
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Enter" />يضاف الى قاعدة البيانات
        </label>
    </div>
</div>
<div class="form-group ">
    <label for="example-textarea">وصف المنتج</label>
    <textarea class="form-control" asp-for="Description" id="example-textarea" rows="4"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>

</div>

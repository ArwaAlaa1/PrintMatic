@model ProductVM

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group" hidden>
    <label asp-for="Id" class="control-label"></label>
    <input asp-for="Id" class="form-control" />
    <span asp-validation-for="Id" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="NumOfPhotos" class="control-label"></label>
    <input asp-for="NumOfPhotos" class="form-control" />
    <span asp-validation-for="NumOfPhotos" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="NormalMinDate" class="control-label"></label>
    <input asp-for="NormalMinDate" class="form-control" />
    <span asp-validation-for="NormalMinDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="NormalMaxDate" class="control-label"></label>
    <input asp-for="NormalMaxDate" class="form-control" />
    <span asp-validation-for="NormalMaxDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UrgentMinDate" class="control-label"></label>
    <input asp-for="UrgentMinDate" class="form-control" />
    <span asp-validation-for="UrgentMinDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UrgentMaxDate" class="control-label"></label>
    <input asp-for="UrgentMaxDate" class="form-control" />
    <span asp-validation-for="UrgentMaxDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="NormalPrice" class="control-label"></label>
    <input asp-for="NormalPrice" class="form-control" />
    <span asp-validation-for="NormalPrice" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="UrgentPrice" class="control-label"></label>
    <input asp-for="UrgentPrice" class="form-control" />
    <span asp-validation-for="UrgentPrice" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Color" /> @Html.DisplayNameFor(model => model.Color)
    </label>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Text" /> @Html.DisplayNameFor(model => model.Text)
    </label>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Date" /> @Html.DisplayNameFor(model => model.Date)
    </label>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Enter" /> @Html.DisplayNameFor(model => model.Enter)
    </label>
</div>
<div class="form-group">
    <label class="col-form-label">Category</label>
    <select asp-for="CategoryId" class="form-select  form-select-lg mb-3" aria-label="Large select example" asp-items="@(new SelectList(Model.Categories,"Id","Name"))">
        <option value="0">select a Category</option>
    </select>
</div>
<div class="form-group">
    <label class="col-form-label">Company</label>
    <select asp-for="UserId" class="form-select  form-select-lg mb-3" aria-label="Large select example" asp-items="@(new SelectList(Model.Users,"Id","DisplayName"))">
        <option value="0">select a Company</option>
    </select>
</div>

@model ProductPhotosVM

<div >

    <div class="form-group pb-3" hidden>
        <label asp-for="ProductId" class="col-form-label fw-bold fs-4"></label>
        <input asp-for="ProductId" class="form-control" readonly />

    </div>
    <div class="form-group">
    <label asp-for="Product.Name" class="col-form-label"></label>
        <input value="@Model.Product.Name" class="form-control" readonly/>

    </div>
    <div class="form-group pb-3">
        <label class="col-form-label fw-bold fs-4">Image</label>
        <img src="~/@Model.Photo" width="100" height="100" class="rounded-2 img-fluid" />
    </div>
</div>
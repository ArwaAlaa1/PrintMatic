@model ProductPhotosVM
@{
    ViewData["Title"] = "Edit";
}
    <div class="m-auto  bg-white p-5">
        <h1>تعديل صورة المنتج</h1>
    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-primary mt-3 mb-2">
            @TempData["message"]
        </div>
    }
    </hr>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">


        <partial name="PartialViews/CreateEditView" />
        <br />

        <div class="col-md-4 mb-3">
            <label class="col-form-label fw-bold fs-4">الصوره  </label>
            <input type="hidden" asp-for="Photo" />
            <img src="~/Uploads/products/@Model.Photo" width="100" height="100" class="rounded-2 img-fluid" />
        </div>
        <div class="col" hidden>

            <input asp-for="FilePath" class="form-control" placeholder="مكان الصوره" />
        </div>
        <br />
        <div class="form-group mt-4">
            <input type="submit" value="حفظ" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">العوده</a>
        </div>
    </form>

</div>

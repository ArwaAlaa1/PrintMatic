@model ProductPhotosVM
@{
    ViewData["Title"] = "Details";
}



    <div class="m-auto  bg-white p-5">
        <h1> تفاصيل الصوره</h1>


    <hr />

    <div>

        <partial name="PartialViews/DeleteDetialsView" />

        <div class=" mt-4">
            <a href="~/ProductPhoto/Edit?ProductId=@Model.ProductId&Photo=@Model.Photo"  class="btn btn-primary">تعديل</a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Index" class="btn btn-light">العوده</a>

            }
            else if (User.IsInRole("بائع"))
            {
                <a asp-action="YourProductPhotos" class="btn btn-light">العوده</a>

            }
        </div>
    </div>
</div>



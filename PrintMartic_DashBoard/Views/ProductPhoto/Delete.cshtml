@model ProductPhotosVM
@{
    ViewData["Title"] = "Delete";
}

<div class="m-auto w-75 bg-white p-5">
    <h1>Delete ProductPhoto</h1>
    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-primary mt-3 mb-2">
            @TempData["message"]
        </div>
    }

    <form asp-action="Delete" method="post">


        <partial name="PartialViews/DeleteDetialsView" />
        <input type="hidden" asp-for="Photo" />
        <div class="form-group mt-4">
            <input type="submit" value="Delete" class="btn btn-danger " />
            <a asp-action="Index" class="btn btn-light">Back to List</a>
        </div>
    </form>

</div>
